
<!-- Website title and search bar -->
<div class="container">
  <div class="brand-search">
    <%= link_to 'Book Exchange', root_path, class: "navbar-brand" %>

    <%= form_tag book_search_path, method: "GET", class: "navbar-form" do %>
      <div class="search-bar">
        <%= text_field_tag :title, @title, class: "fa fa-search form-control", placeholder: "Search by keyword or title", autocomplete: "off" %>
        <%= button_to "Search", nil, class: "btn btn-default" %>
      </div>
    <% end %>
    
  </div>
</div>