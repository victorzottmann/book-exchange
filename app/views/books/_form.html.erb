
<!-- Form to create new book -->
<div class="form-container">
  <%= form_with(model: book, local: true) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      
    <div class="form-group">
      <%= form.label :category_id %>
      <%= form.collection_select(:category_id, Category.all, :id, :name, prompt: true) %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :author_id %>
      <%= form.collection_select(:author_id, Author.all, :id, :first_name, prompt: true) %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :publisher_id %>
      <%= form.collection_select(:publisher_id, Publisher.all, :id, :name, prompt: true) %>
    </div>
    <br>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :edition %>
      <%= form.number_field :edition, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :pages %>
      <%= form.number_field :pages, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :publication_date %>
      <%= form.text_field :publication_date, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :format %>
      <%= form.text_field :format, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>



