
<!-- Form to create new book -->
<div class="form-container">
  <%= form_with(model: book, local: true) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      
    <div class="field">
      <%= form.label :picture %>
      <%= form.file_field :picture, accept: "image/png, image/jpg, image/jpeg" %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :category_id %>
      <%= form.collection_select(:category_id, Category.all, :id, :name, prompt: true) %>
    </div>
    <br>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.fields_for :author do |f| %>
        <%= f.label :author %>
        <%= f.text_field :name, class: "form-control", autocomplete: "off" %>
      <% end %>
    </div>
    <br>
    <div class="field">
      <%= form.fields_for :publisher do |f| %>
        <%= f.label :publisher %>
        <%= f.text_field :name, class: "form-control", autocomplete: "off" %>
      <% end %>
    </div>
    <br>
    <div class="field">
      <%= form.label :edition %>
      <%= form.number_field :edition, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :pages %>
      <%= form.number_field :pages, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :publication_date %>
      <%= form.text_field :date, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :format %>
      <%= form.text_field :format, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>



